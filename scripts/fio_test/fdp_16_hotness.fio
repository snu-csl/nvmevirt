[global]
ioengine=io_uring_cmd
rw=randwrite
group_reporting
filename=/dev/ng0n1
fdp=1
time_based
runtime=${TIME}

# Define 16 jobs for each placement handle
# with varying hotness and incrementing thinktime
[job0]
name=Write to Zone 0
bs=4k
size=1G
offset=0
fdp_pli=${RUH0}

[job1]
name=Write to Zone 1
bs=4k
size=1G
offset=1G
fdp_pli=${RUH1}
thinktime=1

[job2]
name=Write to Zone 2
bs=4k
size=1G
offset=2G
fdp_pli=2 % ${RUH2}
thinktime=5

